<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <TextView
                android:id="@+id/arrow1"
                android:layout_width="wrap_content"
                android:text="---"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                />

        <TextView
                android:id="@+id/arrow2"
                android:layout_width="wrap_content"
                android:text="---"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                />

        <TextView
                android:id="@+id/arrow3"
                android:layout_width="wrap_content"
                android:text="---"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                />

        <TextView
                android:id="@+id/arrow4"
                android:layout_width="wrap_content"
                android:text="---"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                />

        <TextView
                android:id="@+id/arrow5"
                android:layout_width="wrap_content"
                android:text="---"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                />

        <TextView
                android:id="@+id/arrow6"
                android:layout_width="wrap_content"
                android:text="---"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                />

        <TextView
                android:layout_width="wrap_content"
                android:text="=>"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                />

        <TextView
                android:id="@+id/finalScore"
                android:layout_width="wrap_content"
                android:text="---"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <Button
                    android:id="@+id/scoreX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    />

            <Button
                    android:id="@+id/score10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    />

            <Button
                    android:id="@+id/score9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    />

            <Button
                    android:id="@+id/score8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    />

            <Button
                    android:id="@+id/score7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    />

            <Button
                    android:id="@+id/score6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/score5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    />

            <Button
                    android:id="@+id/score4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    />

            <Button
                    android:id="@+id/score3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    />

            <Button
                    android:id="@+id/score2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    />

            <Button
                    android:id="@+id/score1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    />

            <Button
                    android:id="@+id/scoreM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    />

        </LinearLayout>

        <Button
                android:id="@+id/submit"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                />

    </LinearLayout>


</LinearLayout>
